{
  "name": "csp-automation",
  "version": "1.0.0",
  "description": "CSP Automation Suite",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:open:local": "cypress open --config-file cypress.config.local.ts",
    "cy:open:dev": "cypress open --config-file cypress.config.dev.ts",
    "cy:open:qa": "cypress open --config-file cypress.config.qa.ts",
    "cy:run:local": "cypress run --config-file cypress.config.local.ts",
    "cy:run:dev": "cypress run --config-file cypress.config.dev.ts",
    "cy:run:qa": "cypress run --config-file cypress.config.qa.ts",
    "merge:reports": "mochawesome-merge cypress/reports/*.json > cypress/reports/report.json",
    "generate:report": "marge cypress/reports/report.json",
    "format": "prettier --write 'cypress/**/*.ts'",
    "lint": "eslint 'cypress/**/*.ts'",
    "lint:fix": "eslint 'cypress/**/*.ts' --fix",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^20.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "cypress": "^13.6.2"
  },
  "devDependencies": {
    "@types/cypress": "^0.1.6",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cypress-xpath": "^2.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^3.5.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "mocha": "^10.7.3",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "prettier": "^3.3.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": [
      "cypress/e2e/steps/**/*.ts"
    ],
    "html": {
      "enabled": true
    }
  }
}
